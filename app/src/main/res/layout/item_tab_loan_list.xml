<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_bottom_rect"
    android:layout_margin="@dimen/_10sdp"
    android:padding="@dimen/_10sdp">


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cash Loans"
        android:textColor="@color/black"
        android:textSize="@dimen/_21sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/topGuideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.22" />

    <TextView
        android:id="@+id/tvdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="May 14, 2019 to May 14, 2019"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/topGuideline1" />


    <android.support.constraint.Guideline
        android:id="@+id/topGuideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.39" />

    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="@color/small_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/topGuideline2" />


    <android.support.constraint.Guideline
        android:id="@+id/topGuideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.49" />

    <TextView
        android:id="@+id/tvLoadId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Loan ID"
        android:textColor="@color/black"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintEnd_toStartOf="@+id/tvLoadAmount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/topGuideline3" />

    <TextView
        android:id="@+id/tvLoadAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Loan Amount"
        android:textColor="@color/black"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintBottom_toBottomOf="@+id/tvLoadId"
        app:layout_constraintEnd_toStartOf="@+id/tvTenture"
        app:layout_constraintStart_toEndOf="@+id/tvLoadId"
        app:layout_constraintTop_toTopOf="@+id/tvLoadId" />

    <TextView
        android:id="@+id/tvTenture"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tenture"
        android:layout_marginLeft="@dimen/_15sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintBottom_toBottomOf="@+id/tvLoadId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvLoadAmount"
        app:layout_constraintTop_toTopOf="@+id/tvLoadId" />

    <android.support.constraint.Guideline
        android:id="@+id/topGuideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.62" />

    <TextView
        android:id="@+id/tvLoadIdValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="322342"
        android:textColor="@color/sky"
        android:textSize="@dimen/_15sdp"
        app:layout_constraintEnd_toStartOf="@+id/tvLoadAmountValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/topGuideline4" />

    <TextView
        android:id="@+id/tvLoadAmountValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="3540.0"
        android:textColor="@color/sky"
        android:textSize="@dimen/_15sdp"
        app:layout_constraintBottom_toBottomOf="@+id/tvLoadIdValue"
        app:layout_constraintEnd_toStartOf="@+id/tvTentureValue"
        app:layout_constraintStart_toEndOf="@+id/tvLoadIdValue"
        app:layout_constraintTop_toTopOf="@+id/tvLoadIdValue" />

    <TextView
        android:id="@+id/tvTentureValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="6 Months"
        android:textColor="@color/sky"
        android:textSize="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        app:layout_constraintBottom_toBottomOf="@+id/tvLoadIdValue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvLoadAmountValue"
        app:layout_constraintTop_toTopOf="@+id/tvLoadIdValue" />

    <android.support.constraint.Guideline
        android:id="@+id/topGuideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.83" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/light_blue_rect"
        android:gravity="center"
        android:padding="12dp"
        android:text="Select Bank Account"
        android:textColor="#ff0000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/topGuideline5" />
</android.support.constraint.ConstraintLayout>